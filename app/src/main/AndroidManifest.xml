<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cz.pavelhanzl.warehouseinventorymanager">

    <application
        android:name=".WarehouseInventoryManagerApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WarehouseInventoryManager">
        <activity android:name=".signInUser.SplashscreenActivity"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".signInUser.RegisterActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".signInUser.LoginActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".MainActivity"
                  android:screenOrientation="portrait"/>
    </application>

</manifest>