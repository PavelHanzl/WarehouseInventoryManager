<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/dashboardFragment">

    <fragment
        android:id="@id/dashboardFragment"
        android:name="cz.pavelhanzl.warehouseinventorymanager.dashboard.DashboardFragment"
        android:label="@string/Dashboard"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/navigate_dashboard_to_settings"
            app:destination="@id/settingsFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/action_dashboardFragment_to_listOfWarehousesFragment"
            app:destination="@id/listOfWarehousesFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_invitationsFragment"
            app:destination="@id/invitationsFragment" />

    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="cz.pavelhanzl.warehouseinventorymanager.settings.SettingsFragment"
        android:label="@string/Settings"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/navigate_settings_to_dashboard"
            app:destination="@id/dashboardFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right" />
        <argument
            android:name="number"
            app:argType="integer"
            android:defaultValue="2" />
        <action
            android:id="@+id/action_settingsFragment_to_changePasswordFragment"
            app:destination="@id/changePasswordFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_changeEmailFragment"
            app:destination="@id/changeEmailFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_changePhotoFragment"
            app:destination="@id/changePhotoFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_changeNameFragment"
            app:destination="@id/changeNameFragment" />
    </fragment>
    <fragment
        android:id="@+id/listOfWarehousesFragment"
        android:name="cz.pavelhanzl.warehouseinventorymanager.warehouse.listOfWarehouses.ListOfWarehousesFragment"
        tools:layout="@layout/fragment_list_of_warehouses">
        <action
            android:id="@+id/action_listOfWarehousesFragment_to_createEditWarehouseFragment"
            app:destination="@id/createEditWarehouseFragment" />
        <action
            android:id="@+id/action_listOfWarehousesFragment_to_warehouseDetailFragment"
            app:destination="@id/warehouseDetailFragment" />
        <argument
            android:name="ownWarehouse"
            android:defaultValue="true"
            app:argType="boolean" />
    </fragment>
    <fragment
        android:id="@+id/createEditWarehouseFragment"
        android:name="cz.pavelhanzl.warehouseinventorymanager.warehouse.createEditWarehouse.CreateEditWarehouseFragment"
        tools:layout="@layout/fragment_create_edit_warehouse">
        <argument
            android:name="warehouseObject"
            android:defaultValue="@null"
            app:argType="cz.pavelhanzl.warehouseinventorymanager.repository.Warehouse"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/warehouseDetailFragment"
        android:name="cz.pavelhanzl.warehouseinventorymanager.warehouse.warehouseDetail.WarehouseDetailFragment"
        tools:layout="@layout/fragment_warehouse_detail">
        <argument
            android:name="warehouseID"
            app:argType="string" />
        <action
            android:id="@+id/action_warehouseDetailFragment_to_itemDetailFragment"
            app:destination="@id/itemDetailFragment" />
        <action
            android:id="@+id/action_warehouseDetailFragment_to_createWarehouseFragment"
            app:destination="@id/createEditWarehouseFragment" />
        <argument
            android:name="ownWarehouse"
            app:argType="boolean" />
        <action
            android:id="@+id/action_warehouseDetailFragment_to_scannerFragment"
            app:destination="@id/scannerFragment" />
        <action
            android:id="@+id/action_warehouseDetailFragment_to_addRemoveItem"
            app:destination="@id/addRemoveItemFragment" />
        <action
            android:id="@+id/action_warehouseDetailFragment_to_warehouseLogFragment"
            app:destination="@id/warehouseLogFragment" />
        <action
            android:id="@+id/action_warehouseDetailFragment_to_peopleInWarehouseFragment"
            app:destination="@id/peopleInWarehouseFragment" />
    </fragment>
    <fragment
        android:id="@+id/itemDetailFragment"
        android:name="cz.pavelhanzl.warehouseinventorymanager.warehouse.itemDetail.ItemDetailFragment"
        android:label="@string/item_detail"
        tools:layout="@layout/fragment_item_detail">
        <action
            android:id="@+id/action_itemDetailFragment_to_createEditItemFragment"
            app:destination="@id/createEditItemFragment" />
        <argument
            android:name="selectedWarehouseItemObject"
            app:argType="cz.pavelhanzl.warehouseinventorymanager.repository.WarehouseItem" />
        <argument
            android:name="ownWarehouse"
            app:argType="boolean" />
    </fragment>
    <action android:id="@+id/action_global_listOfWarehousesFragment_false" app:destination="@id/listOfWarehousesFragment">
        <argument
            android:name="ownWarehouse"
            android:defaultValue="false" />
    </action>
    <action android:id="@+id/action_global_listOfWarehousesFragment_true" app:destination="@id/listOfWarehousesFragment" >
        <argument
            android:name="ownWarehouse"
            android:defaultValue="true" />
    </action>
    <fragment
        android:id="@+id/scannerFragment"
        android:name="cz.pavelhanzl.warehouseinventorymanager.scanner.ScannerFragment"
        android:label="@string/scanBarcode"
        tools:layout="@layout/fragment_scanner">
        <argument
            android:name="mode"
            android:defaultValue="reading"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/addRemoveItemFragment"
        android:name="cz.pavelhanzl.warehouseinventorymanager.warehouse.addRemoveItem.AddRemoveItemFragment"
        tools:layout="@layout/fragment_add_remove_item" >
        <action
            android:id="@+id/action_addRemoveItem_to_scannerFragment"
            app:destination="@id/scannerFragment" />
        <action
            android:id="@+id/action_addRemoveItem_to_createEditItemFragment"
            app:destination="@id/createEditItemFragment" />
    </fragment>
    <fragment
        android:id="@+id/createEditItemFragment"
        android:name="cz.pavelhanzl.warehouseinventorymanager.warehouse.createEditItem.CreateEditItemFragment"
        tools:layout="@layout/fragment_create_edit_item">
        <argument
            android:name="warehouseId"
            app:argType="string" />
        <action
            android:id="@+id/action_createEditItemFragment_to_scannerFragment"
            app:destination="@id/scannerFragment" />
        <argument
            android:name="warehouseItemObject"
            app:argType="cz.pavelhanzl.warehouseinventorymanager.repository.WarehouseItem"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
    <fragment
        android:id="@+id/warehouseLogFragment"
        android:name="cz.pavelhanzl.warehouseinventorymanager.warehouse.warehouseLog.WarehouseLogFragment"
        android:label="@string/warehouseLog"
        tools:layout="@layout/fragment_warehouse_log">
        <argument
            android:name="warehouseObject"
            app:argType="cz.pavelhanzl.warehouseinventorymanager.repository.Warehouse" />
    </fragment>
    <fragment
        android:id="@+id/invitationsFragment"
        android:name="cz.pavelhanzl.warehouseinventorymanager.invitations.InvitationsFragment"
        android:label="@string/warehouseInvitations"
        tools:layout="@layout/fragment_invitations" />
    <fragment
        android:id="@+id/peopleInWarehouseFragment"
        android:name="cz.pavelhanzl.warehouseinventorymanager.warehouse.peopleInWarehouse.PeopleInWarehouseFragment"
        android:label="@string/peopleInThisWarehouse"
        tools:layout="@layout/fragment_people_in_warehouse" >
        <argument
            android:name="warehouseObject"
            app:argType="cz.pavelhanzl.warehouseinventorymanager.repository.Warehouse" />
        <argument
            android:name="ownWarehouse"
            app:argType="boolean" />
        <action
            android:id="@+id/action_peopleInWarehouseFragment_to_inviteUserFragment"
            app:destination="@id/inviteUserFragment" />
    </fragment>
    <dialog
        android:id="@+id/inviteUserFragment"
        android:name="cz.pavelhanzl.warehouseinventorymanager.warehouse.peopleInWarehouse.InviteUserFragment"
        android:label="@string/inviteUserIntoWarehouse"
        tools:layout="@layout/fragment_invite_user" />
    <dialog
        android:id="@+id/changePasswordFragment"
        android:name="cz.pavelhanzl.warehouseinventorymanager.settings.ChangePasswordFragment"
        android:label="fragment_change_password"
        tools:layout="@layout/fragment_change_password" />
    <dialog
        android:id="@+id/changeEmailFragment"
        android:name="cz.pavelhanzl.warehouseinventorymanager.settings.ChangeEmailFragment"
        android:label="fragment_change_email"
        tools:layout="@layout/fragment_change_email" />
    <dialog
        android:id="@+id/changePhotoFragment"
        android:name="cz.pavelhanzl.warehouseinventorymanager.settings.ChangePhotoFragment"
        android:label="fragment_change_photo"
        tools:layout="@layout/fragment_change_photo" />
    <dialog
        android:id="@+id/changeNameFragment"
        android:name="cz.pavelhanzl.warehouseinventorymanager.settings.ChangeNameFragment"
        android:label="fragment_change_name"
        tools:layout="@layout/fragment_change_name" />
</navigation>