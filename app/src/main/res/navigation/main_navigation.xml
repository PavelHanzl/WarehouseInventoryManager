<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/dashboardFragment">

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="cz.pavelhanzl.warehouseinventorymanager.DashboardFragment"
        android:label="@string/Dashboard"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/navigate_dashboard_to_settings"
            app:destination="@id/settingsFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="cz.pavelhanzl.warehouseinventorymanager.SettingsFragment"
        android:label="@string/Settings"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/navigate_settings_to_dashboard"
            app:destination="@id/dashboardFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right" />
        <argument
            android:name="number"
            app:argType="integer"
            android:defaultValue="2" />
        <action
            android:id="@+id/action_settingsFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="cz.pavelhanzl.warehouseinventorymanager.About"
        android:label="fragment_about"
        tools:layout="@layout/fragment_about" />
</navigation>