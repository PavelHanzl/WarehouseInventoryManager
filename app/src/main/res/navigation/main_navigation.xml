<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/dashboardFragment">

    <fragment
        android:id="@id/dashboardFragment"
        android:name="cz.pavelhanzl.warehouseinventorymanager.DashboardFragment"
        android:label="@string/Dashboard"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/navigate_dashboard_to_settings"
            app:destination="@id/settingsFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/action_dashboardFragment_to_ownWarehouseFragment"
            app:destination="@id/ownWarehouseFragment" />

    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="cz.pavelhanzl.warehouseinventorymanager.SettingsFragment"
        android:label="@string/Settings"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/navigate_settings_to_dashboard"
            app:destination="@id/dashboardFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right" />
        <argument
            android:name="number"
            app:argType="integer"
            android:defaultValue="2" />
        <action
            android:id="@+id/action_settingsFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="cz.pavelhanzl.warehouseinventorymanager.About"
        android:label="fragment_about"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/ownWarehouseFragment"
        android:name="cz.pavelhanzl.warehouseinventorymanager.ownWarehouse.OwnWarehousesFragment"
        tools:layout="@layout/fragment_own_warehouses">
        <action
            android:id="@+id/action_ownWarehouseFragment_to_createWarehouseFragment"
            app:destination="@id/createWarehouseFragment" />
        <action
            android:id="@+id/action_ownWarehouseFragment_to_ownWarehouseDetailFragment"
            app:destination="@id/ownWarehouseDetailFragment" />
        <argument
            android:name="ownWarehouse"
            android:defaultValue="true"
            app:argType="boolean" />
    </fragment>
    <fragment
        android:id="@+id/createWarehouseFragment"
        android:name="cz.pavelhanzl.warehouseinventorymanager.ownWarehouse.createWarehouse.CreateWarehouseFragment"
        tools:layout="@layout/fragment_create_warehouse">
        <argument
            android:name="warehouseObject"
            android:defaultValue="@null"
            app:argType="cz.pavelhanzl.warehouseinventorymanager.repository.Warehouse"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/ownWarehouseDetailFragment"
        android:name="cz.pavelhanzl.warehouseinventorymanager.ownWarehouse.ownWarehouseDetail.OwnWarehouseDetailFragment"
        tools:layout="@layout/fragment_own_warehouse_detail">
        <argument
            android:name="warehouseID"
            app:argType="string" />
        <action
            android:id="@+id/action_ownWarehouseDetailFragment_to_itemDetailFragment"
            app:destination="@id/itemDetailFragment" />
        <action
            android:id="@+id/action_ownWarehouseDetailFragment_to_createWarehouseFragment"
            app:destination="@id/createWarehouseFragment" />
        <argument
            android:name="ownWarehouse"
            app:argType="boolean" />
        <action
            android:id="@+id/action_ownWarehouseDetailFragment_to_scannerFragment"
            app:destination="@id/scannerFragment" />
        <action
            android:id="@+id/action_ownWarehouseDetailFragment_to_addRemoveItem"
            app:destination="@id/addRemoveItem" />
    </fragment>
    <fragment
        android:id="@+id/itemDetailFragment"
        android:name="cz.pavelhanzl.warehouseinventorymanager.ownWarehouse.itemDetail.ItemDetailFragment"
        android:label="@string/item_detail"
        tools:layout="@layout/fragment_item_detail">
        <argument
            android:name="itemId"
            app:argType="string" />
    </fragment>
    <action android:id="@+id/action_global_ownWarehouseFragment_false" app:destination="@id/ownWarehouseFragment">
        <argument
            android:name="ownWarehouse"
            android:defaultValue="false" />
    </action>
    <action android:id="@+id/action_global_ownWarehouseFragment_true" app:destination="@id/ownWarehouseFragment" >
        <argument
            android:name="ownWarehouse"
            android:defaultValue="true" />
    </action>
    <fragment
        android:id="@+id/scannerFragment"
        android:name="cz.pavelhanzl.warehouseinventorymanager.scanner.ScannerFragment"
        android:label="Skener"
        tools:layout="@layout/fragment_scanner">
        <argument
            android:name="mode"
            android:defaultValue="reading"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/addRemoveItem"
        android:name="cz.pavelhanzl.warehouseinventorymanager.ownWarehouse.addRemoveItem.AddRemoveItem"
        android:label="fragment_add_remove_item"
        tools:layout="@layout/fragment_add_remove_item" />
</navigation>