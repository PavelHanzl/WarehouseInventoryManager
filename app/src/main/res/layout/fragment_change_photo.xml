<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
   >

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewmodel"
            type="cz.pavelhanzl.warehouseinventorymanager.settings.SettingsFragmentViewModel" />

        <variable
            name="fragmentClass"
            type="cz.pavelhanzl.warehouseinventorymanager.settings.ChangePhotoFragment" />


    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings.ChangePhotoFragment">

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/linearProgressIndicator2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="@{viewmodel.loading ? View.VISIBLE : View.GONE}"
        app:hideAnimationBehavior="inward"
        app:layout_constraintTop_toTopOf="parent"
        app:showAnimationBehavior="outward" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ci_ItemProfileImage_FragmentChangePhoto"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="16dp"
        android:elevation="@dimen/cardview_default_elevation"
        android:src="@drawable/ic_avatar_user_detail_secondary_color"
        userDetailProfileImageUrl="@{viewmodel.profilePhotoUrl}"
        android:onClick="@{() -> fragmentClass.runCamera()}"
        app:civ_border_color="@color/secondaryColor"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_changePhoto_FragmentChangePhoto"
        android:layout_width="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/secondaryColor"
        android:onClick="@{()-> viewmodel.changePhoto()}"
        android:text="@string/changePhoto"
        app:layout_constraintEnd_toEndOf="@+id/linearProgressIndicator2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ci_ItemProfileImage_FragmentChangePhoto" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>