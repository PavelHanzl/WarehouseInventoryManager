<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userProfileImage_warehouseInvitationFragment"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/avatar_profileavatar"
        app:civ_border_color="@color/primaryColor"
        app:civ_border_width="2dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/rv_userName_warehouseInvitationFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Jméno Příjmení"
        android:textAlignment="viewEnd"
        android:textColor="@color/darkGrayColor"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/userProfileImage_warehouseInvitationFragment"
        app:layout_constraintTop_toTopOf="@+id/userProfileImage_warehouseInvitationFragment" />





    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/rv_invitationDescription_warehouseInvitationFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:minWidth="70dp"
        android:layout_marginTop="8dp"
        android:text="Vás zve abyste se připojili k jeho skladu:"
        android:textColor="@color/darkGrayColor"
        app:layout_constraintStart_toStartOf="@+id/rv_userName_warehouseInvitationFragment"
        app:layout_constraintTop_toBottomOf="@+id/rv_userName_warehouseInvitationFragment" />




    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/rv_warehouseName_warehouseInvitationFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:minWidth="70dp"
        android:layout_marginEnd="16dp"
        android:singleLine="true"
        android:text="Název skladu"
        android:layout_marginTop="8dp"
        android:textColor="@color/primaryColor"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/rv_invitationDescription_warehouseInvitationFragment"
        app:layout_constraintTop_toBottomOf="@+id/rv_invitationDescription_warehouseInvitationFragment" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/rv_date_warehouseInvitationFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:minWidth="70dp"
        android:singleLine="true"
        android:text="24. 12. 2021 18:39:46"
        android:textAlignment="viewEnd"
        android:textColor="@color/lightGrayColor"
        app:layout_constraintBottom_toBottomOf="@+id/rv_userName_warehouseInvitationFragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rv_userName_warehouseInvitationFragment" />

    <Button
        android:id="@+id/btn_declineInvitation_warehouseInvitationFragment"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:onClick="@{()-> viewmodel.onBackButtonClicked()}"
        android:text="Odmítnout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <Button
        android:id="@+id/btn_acceptInvitation_warehouseInvitationFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/primaryColor"
        android:layout_marginTop="8dp"
        android:text="Přijmout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/rv_warehouseName_warehouseInvitationFragment" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightGrayColor"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_acceptInvitation_warehouseInvitationFragment" />
</androidx.constraintlayout.widget.ConstraintLayout>