<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewmodel"
            type="cz.pavelhanzl.warehouseinventorymanager.settings.SettingsFragmentViewModel" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ChangePasswordFragment">

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/linearProgressIndicator2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="@{viewmodel.loading ? View.VISIBLE : View.GONE}"
            app:hideAnimationBehavior="inward"
            app:layout_constraintTop_toTopOf="parent"
            app:showAnimationBehavior="outward" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_info_FragmentChangePassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@string/fillInTheseFieldsToChangePassword"
            android:textColor="@color/midGrayColor"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_userCurrentEmail_FragmentChangePassword"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:hint="@string/enterCurrentEmail"
            app:errorEnabled="true"
            app:errorText="@{viewmodel.userCurrentEmailError}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_info_FragmentChangePassword">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/til_userCurrentEmailContent_FragmentChangeEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:text="@={viewmodel.userCurrentEmailContent}" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_userCurrentPassword_FragmentChangePassword"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:hint="@string/enterCurrentPassword"
            app:errorEnabled="true"
            app:errorText="@{viewmodel.userCurrentPasswordError}"
            app:endIconMode="password_toggle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/til_userCurrentEmail_FragmentChangePassword">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/til_userCurrentPasswordContent_FragmentChangePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:inputType="textPassword"
                android:singleLine="true"
                android:text="@={viewmodel.userCurrentPasswordContent}" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_userNew1Password_FragmentChangePassword"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:hint="@string/enterNewPassword"
            app:errorEnabled="true"
            app:errorText="@{viewmodel.userNewPassword1Error}"
            app:endIconMode="password_toggle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/til_userCurrentPassword_FragmentChangePassword">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/til_userNew1PasswordContent_FragmentChangePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:inputType="textPassword"
                android:text="@={viewmodel.userNewPassword1Content}" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_userNew2Password_FragmentChangePassword"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:hint="@string/enterNewPasswordAgain"
            app:errorEnabled="true"
            app:errorText="@{viewmodel.userNewPassword2Error}"
            app:layout_constraintEnd_toEndOf="parent"
            app:endIconMode="password_toggle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/til_userNew1Password_FragmentChangePassword">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/til_userNew2PasswordContent_FragmentChangePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:inputType="textPassword"
                android:text="@={viewmodel.userNewPassword2Content}" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_changePassword_FragmentChangePassword"
            android:layout_width="379dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/secondaryColor"
            android:onClick="@{()-> viewmodel.changePassword()}"
            android:text="@string/changePassword"
            app:layout_constraintEnd_toEndOf="@+id/til_userNew2Password_FragmentChangePassword"
            app:layout_constraintStart_toStartOf="@+id/til_userNew2Password_FragmentChangePassword"
            app:layout_constraintTop_toBottomOf="@+id/til_userNew2Password_FragmentChangePassword" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>