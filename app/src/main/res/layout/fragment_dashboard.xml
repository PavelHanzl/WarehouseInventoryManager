<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <import type="cz.pavelhanzl.warehouseinventorymanager.repository.Constants"/>

        <variable
            name="viewmodel"
            type="cz.pavelhanzl.warehouseinventorymanager.dashboard.DashboardFragmentViewModel" />

        <variable
            name="fragmentClass"
            type="cz.pavelhanzl.warehouseinventorymanager.dashboard.DashboardFragment" />

    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dashboard.DashboardFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
    >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/llButtonSettings"
                android:layout_width="0dp"
                android:layout_height="78dp"
                android:layout_marginTop="16dp"
                android:background="@color/blue1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:onClick="@{()->fragmentClass.navigateToSettings()}"
                app:layout_constraintEnd_toEndOf="@+id/buttonSendInvitations_dashboard"
                app:layout_constraintStart_toStartOf="@+id/buttonSendInvitations_dashboard"
                app:layout_constraintTop_toBottomOf="@+id/buttonSendInvitations_dashboard">


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/appCompatImageView4"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="25dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_settings"
                    android:tint="@color/primaryColor"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/materialTextView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp"
                    android:text="@string/settings"
                    android:textColor="@color/darkGrayColor"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/appCompatImageView4"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/buttonHelpDashboard"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                android:background="@color/blue1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:layout_constraintBottom_toBottomOf="@+id/llButtonSettings"
                app:layout_constraintEnd_toEndOf="@+id/llButtonInvitationsWarehouse"
                app:layout_constraintStart_toStartOf="@+id/llButtonInvitationsWarehouse"
                app:layout_constraintTop_toBottomOf="@+id/llButtonInvitationsWarehouse">


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/appCompatImageView2"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="25dp"
                    android:scaleType="fitCenter"

                    android:src="@drawable/ic_help"

                    android:tint="@color/primaryColor"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/materialTextView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp"
                    android:text="@string/aboutApplication"
                    android:textColor="@color/darkGrayColor"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:onClick="@{()->fragmentClass.navigateToAbout()}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/appCompatImageView2"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/llButtonOwnWarehouse"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/blue1"
                android:clickable="true"
                android:focusable="true"
                android:onClick="@{()->fragmentClass.navigateToOwnWarehouses()}"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="vertical"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="-10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_ownwarehouse"
                    android:tint="@color/primaryColor" />


                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/ownWarehouses"
                    android:textColor="@color/darkGrayColor"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llButtonSharedWarehouse"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/blue1"
                android:clickable="true"
                android:focusable="true"
                android:onClick="@{()->fragmentClass.navigateToSharedWarehouses()}"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/llButtonOwnWarehouse">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="-10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_sharedwarehouse"
                    android:tint="@color/primaryColor" />


                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/sharedWarehouses"
                    android:textColor="@color/darkGrayColor"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/buttonSendInvitations_dashboard"
                android:layout_width="175dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:background="@color/blue1"
                android:clickable="true"
                android:focusable="true"
                android:onClick="@{()->fragmentClass.navigateToSendInvitations()}"
                android:foreground="?android:attr/selectableItemBackground"
                app:layout_constraintBottom_toBottomOf="@+id/llButtonInvitationsWarehouse"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                app:layout_constraintTop_toTopOf="@+id/llButtonInvitationsWarehouse">


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/appCompatImageView3"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="25dp"
                    android:layout_marginBottom="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_send"
                    android:tint="@color/primaryColor"
                    app:layout_constraintBottom_toTopOf="@+id/materialTextView2"
                    app:layout_constraintStart_toStartOf="parent" />


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/materialTextView2"
                    android:layout_width="0dp"
                    android:layout_height="18dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="25dp"
                    android:text="@string/drawerMenu_warehouseInvitationsSend"
                    android:textColor="@color/blackColor"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/invitationBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="50dp"
                android:visibility="@{viewmodel.invitationRecievedBadgeVisible ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toTopOf="@+id/llButtonInvitationsWarehouse"
                app:layout_constraintEnd_toEndOf="@+id/llButtonInvitationsWarehouse"
                app:layout_constraintStart_toEndOf="@+id/llButtonInvitationsWarehouse"
                app:layout_constraintTop_toTopOf="@+id/llButtonInvitationsWarehouse">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/invitationBadgeShape"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_circle_shape"
                    android:tint="@color/secondaryColor"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/invitationBadgeNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewmodel.invitationRecievedNumber}"
                    android:textColor="@color/whiteColor"
                    android:textSize="12sp"
                    android:textStyle="bold"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>



            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/llButtonInvitationsWarehouse"
                android:layout_width="0dp"
                android:layout_height="150dp"

                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:background="@color/blue1"
                android:clickable="true"
                android:focusable="true"
                android:onClick="@{()->fragmentClass.navigateToRecievedInvitations()}"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/llButtonSharedWarehouse">


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/appCompatImageView"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginBottom="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_warehousenotification"
                    android:tint="@color/primaryColor"
                    app:layout_constraintBottom_toTopOf="@+id/materialTextView"
                    app:layout_constraintStart_toStartOf="@+id/materialTextView" />


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/materialTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:text="@string/drawerMenu_warehouseInvitationsRecieved"
                    android:textColor="@color/darkGrayColor"
                    android:textSize="15sp"
                    android:textStyle="bold"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/notificationBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="50dp"
                android:visibility="@{viewmodel.invitationSendBadgeVisible ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toTopOf="@+id/buttonSendInvitations_dashboard"
                app:layout_constraintEnd_toEndOf="@+id/buttonSendInvitations_dashboard"
                app:layout_constraintStart_toEndOf="@+id/buttonSendInvitations_dashboard"
                app:layout_constraintTop_toTopOf="@+id/buttonSendInvitations_dashboard">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/invitationsSendBadgeShape"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_circle_shape"
                    android:tint="@color/secondaryColor"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/invitationsSendBadgeNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewmodel.invitationSendNumber}"
                    android:textColor="@color/whiteColor"
                    android:textSize="12sp"
                    android:textStyle="bold"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>